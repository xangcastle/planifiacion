@model PlanificacionLocal.Models.Unidad

@{
    ViewBag.Title = "Creación De Unidad";
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="content-wrapper">
    <section class="content-wrappercontenido main-content clear-fix">
        <script src="~/Scripts/Creados/Catalogos/OpeCRUDUnidad.js"></script>
        <script src="~/Scripts/Creados/Catalogos/ValidacionUnidad.js"></script>
        <script src="~/Scripts/Jquery.LimiteCaracter_Plugin.js"></script>        
        <div class="panel panel-primary" style="min-width:750px">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Creaci&oacute;n de cat&aacute;logo Unidad</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "Unidades", FormMethod.Post, new { id = "FrmUnidad" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="capa">
                        <h4>Datos espec&iacute;ficos</h4>
                        <table>
                            <tbody>
                                @Html.ValidationSummary(true)

                                <tr>
                                    <td>@Html.LabelFor(model => model.DescripcionUnidad, "Descripción", new { @class = "control-label " })</td>
                                    <td colspan="3" style="min-width:370px; margin:0 auto;">
                                        @Html.TextAreaFor(model => model.DescripcionUnidad, htmlAttributes : new { @class = "form-control", maxlength = "255", rows = "2", style = "overflow-y:scroll;resize:none;", onblur = "validarTextoEspacios(this,2),PalabraLogica(this)", onkeypress = "return keypressDescripcion(event)" } )
                                        @Html.ValidationMessageFor(model => model.DescripcionUnidad)
                                    </td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br />
                    <div class="text-right">
                        <button type="button" id="btnGrabar" class="btn btn-primary btn-lg">Guardar</button>
                        <a href="@Url.Action("Index")" class="btn btn-default btn-lg">Salir</a>
                    </div>
                }
            </div>
        </div>
        <input type="hidden" value="Unidades" id="Controlador" />
        <input type="hidden" value="Create" id="Accion" />
        <div class="loading_body" style="display: none;"></div>
    </section>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/PanelLocal")
}
