@model PlanificacionLocal.Models.TipoActividad

@{
    ViewBag.Title = "Edicón De Tipo Actividad";
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="content-wrapper">
    <section class="content-wrappercontenido main-content clear-fix">
        <script src="~/Scripts/Creados/Catalogos/OpeCRUDTipoActividad.js"></script>
        <script src="~/Scripts/Creados/Catalogos/ValidacionTipoActividad.js"></script>
        <script src="~/Scripts/Jquery.LimiteCaracter_Plugin.js"></script>
        <div class="panel panel-primary" style="min-width:750px">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Edici&oacute;n de cat&aacute;logo Tipo Actividad</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "TiposActividad", FormMethod.Post, new { id = "FrmTipoActividad" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="capa">
                        <h4>Datos espec&iacute;ficos</h4>
                        <table>
                            <tbody>
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.Id)
                                <tr>
                                    <td>@Html.LabelFor(model => model.Descripcion, "Descripción", new { @class = "control-label " })</td>
                                    <td colspan="3" style="min-width:370px; margin:0 auto">
                                        @Html.TextAreaFor(model => model.Descripcion, htmlAttributes: new { @class = "form-control mayuscula", maxlength = "60", style = "overflow-y:scroll;resize:none;", rows = "2", onblur = "validarTextoEspacios(this,2),PalabraLogica(this)", onkeyup = "javascript:this.value=this.value.toUpperCase()", onkeypress = "return keypressDescripcion(event)" })
                                        @Html.ValidationMessageFor(model => model.Descripcion)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br />
                    <div class="text-right">
                        <button type="button" id="btnGrabar" class="btn btn-primary btn-lg">Guardar</button>
                        <a href="@Url.Action("Index")" class="btn btn-default btn-lg">Salir</a>
                    </div>
                }
            </div>
        </div>
        <input type="hidden" value="TiposActividad" id="Controlador" />
        <input type="hidden" value="Edit" id="Accion" />
        <div class="loading_body" style="display: none;"></div>
    </section>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/PanelLocal")
}
